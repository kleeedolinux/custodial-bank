<div class="flex flex-col items-center justify-center">
  <h1 class="text-4xl font-bold text-center mb-6 text-primary">
    <% if (typeof settings !== 'undefined' && settings) { %>
      <%= settings.bankName %>
    <% } else { %>
      Custodial Bank
    <% } %>
  </h1>
  
  <div class="text-center mb-10">
    <p class="text-xl text-gray-700 mb-4">Secure Storage for Your Digital Assets</p>
    <% if (typeof settings !== 'undefined' && settings) { %>
      <p class="text-gray-600">Powered by <%= settings.tokenSymbol %> on Solana</p>
    <% } else { %>
      <p class="text-gray-600">Powered by Digital Assets on Blockchain</p>
    <% } %>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl w-full">
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="text-center mb-4">
        <i class="fas fa-shield-alt text-4xl text-primary"></i>
      </div>
      <h3 class="text-xl font-semibold text-center mb-3">Secure Custody</h3>
      <p class="text-gray-600 text-center">Your assets are protected with state-of-the-art encryption and security measures.</p>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="text-center mb-4">
        <i class="fas fa-wallet text-4xl text-primary"></i>
      </div>
      <h3 class="text-xl font-semibold text-center mb-3">Easy Management</h3>
      <p class="text-gray-600 text-center">Deposit, withdraw, and manage your assets with a simple and intuitive interface.</p>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="text-center mb-4">
        <i class="fas fa-lock text-4xl text-primary"></i>
      </div>
      <h3 class="text-xl font-semibold text-center mb-3">PIN Protection</h3>
      <p class="text-gray-600 text-center">Your private keys are encrypted with your personal PIN for an extra layer of security.</p>
    </div>
  </div>
  
  <div class="mt-12 flex space-x-4">
    <a href="/auth/register" class="bg-primary hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300">
      Sign Up
    </a>
    <a href="/auth/login" class="bg-secondary hover:bg-indigo-800 text-white font-bold py-3 px-6 rounded-lg transition duration-300">
      Login
    </a>
  </div>
</div> 