<div class="flex justify-center">
  <div class="w-full max-w-md">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <h2 class="text-2xl font-bold text-center mb-6 text-primary">Register</h2>
      
      <% if(typeof errors !== 'undefined') { %>
        <% errors.forEach(function(error) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline"><%= error.msg %></span>
          </div>
        <% }); %>
      <% } %>
      
      <form action="/auth/register" method="POST">
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
            Username
          </label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                 id="username" 
                 name="username" 
                 type="text" 
                 placeholder="Username"
                 value="<%= typeof username != 'undefined' ? username : '' %>"
                 required>
        </div>
        
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
            Email
          </label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                 id="email" 
                 name="email" 
                 type="email" 
                 placeholder="Email"
                 value="<%= typeof email != 'undefined' ? email : '' %>"
                 required>
        </div>
        
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
            Password
          </label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                 id="password" 
                 name="password" 
                 type="password" 
                 placeholder="******************"
                 required>
          <p class="text-gray-500 text-xs mt-1">Password must be at least 6 characters</p>
        </div>
        
        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="password2">
            Confirm Password
          </label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                 id="password2" 
                 name="password2" 
                 type="password" 
                 placeholder="******************"
                 required>
        </div>
        
        <div class="mb-6">
          <p class="text-gray-600 text-sm mb-2">
            By registering, you acknowledge that:
          </p>
          <ul class="list-disc text-gray-600 text-sm pl-5">
            <li>Your account requires admin approval</li>
            <li>You will need to set a 4-digit PIN on first login</li>
            <li>Your PIN cannot be recovered if lost</li>
          </ul>
        </div>
        
        <div class="flex items-center justify-between">
          <button class="bg-primary hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" 
                  type="submit">
            Register
          </button>
        </div>
      </form>
      
      <div class="mt-6 text-center">
        <p class="text-gray-600">
          Already have an account? <a href="/auth/login" class="text-primary hover:text-blue-800">Login</a>
        </p>
      </div>
    </div>
  </div>
</div> 