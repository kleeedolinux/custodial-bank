<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <!-- Sidebar -->
  <div class="md:col-span-1">
    <div class="bg-white shadow-md rounded p-6 mb-6">
      <h3 class="text-xl font-semibold mb-4 text-primary">Navigation</h3>
      <ul class="space-y-2">
        <li>
          <a href="/dashboard" class="block py-2 px-4 hover:bg-gray-100 rounded">Dashboard</a>
        </li>
        <li>
          <a href="/dashboard/deposit" class="block py-2 px-4 bg-primary text-white rounded">Deposit</a>
        </li>
        <li>
          <a href="/dashboard/withdraw" class="block py-2 px-4 hover:bg-gray-100 rounded">Withdraw</a>
        </li>
        <li>
          <a href="/dashboard/transactions" class="block py-2 px-4 hover:bg-gray-100 rounded">Transaction History</a>
        </li>
        <li>
          <a href="/dashboard/wallet" class="block py-2 px-4 hover:bg-gray-100 rounded">Wallet Info</a>
        </li>
      </ul>
    </div>
  </div>
  
  <!-- Main Content -->
  <div class="md:col-span-2">
    <div class="bg-white shadow-md rounded p-6 mb-6">
      <h2 class="text-2xl font-bold mb-6 text-primary">Deposit Funds</h2>
      
      <form action="/dashboard/deposit" method="POST">
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="amount">
            Amount
          </label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                 id="amount" 
                 name="amount" 
                 type="number" 
                 min="0.0001" 
                 step="0.0001"
                 placeholder="0.0000"
                 required>
        </div>
        
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="currency">
            Currency
          </label>
          <select class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                  id="currency" 
                  name="currency"
                  required>
            <option value="SOL">SOL</option>
            <option value="<%= tokenSymbol %>"><%= tokenSymbol %></option>
          </select>
        </div>
        
        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="pin">
            Enter your PIN
          </label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                 id="pin" 
                 name="pin" 
                 type="password"
                 inputmode="numeric" 
                 pattern="[0-9]{4}" 
                 maxlength="4"
                 placeholder="Enter your 4-digit PIN"
                 required>
        </div>
        
        <div class="flex items-center justify-between">
          <button class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" 
                  type="submit">
            <i class="fas fa-arrow-down mr-2"></i>Deposit Funds
          </button>
        </div>
      </form>
      
      <div class="mt-8 p-4 bg-gray-50 rounded-lg border border-gray-200">
        <h3 class="font-semibold text-gray-700 mb-2">Deposit Information</h3>
        <ul class="list-disc pl-5 text-gray-600 text-sm">
          <li>Deposits will be processed immediately.</li>
          <li>Your PIN is required to authorize all transactions.</li>
          <li>For large deposits, please contact support.</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
  // Ensure only numbers can be entered in PIN field
  document.getElementById('pin').addEventListener('input', function() {
    this.value = this.value.replace(/[^0-9]/g, '');
    if (this.value.length > 4) {
      this.value = this.value.slice(0, 4);
    }
  });
</script> 